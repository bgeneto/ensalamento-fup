# Base Application URL
BASE_URL=https://ensalamento.sistema.pro.br

# Database Configuration
DATABASE_URL=sqlite:///./data/ensalamento.db

# Encryption Key gerar com: from cryptography.fernet import Fernet;
ENCRYPTION_KEY=SUAS_CHAVE_DE_CRIPTOGRAFIA_AQUI

# Brevo Email Service Configuration
BREVO_API_KEY=SUA_CHAVE_API_BREVO_AQUI
BREVO_SENDER_EMAIL=seu-email@dominio.com
BREVO_SENDER_NAME=Sistema de Ensalamento FUP/UnB

# Application Configuration
APP_NAME=Sistema de Ensalamento FUP/UnB
APP_VERSION=0.1.0
DEBUG=false

# Initial superadmin for first-time setup
INITIAL_SUPERADMIN_EMAIL=bgeneto+admin@gmail.com
INITIAL_SUPERADMIN_PASSWORD=secure_password_here
INITIAL_SUPERADMIN_NAME=Superadmin

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Host User ID for Docker container permissions
# Set this to the UID of the user running Docker on the host system
# Run 'id -u' on the host to get the correct value
HOST_UID=1000

# Sistema de Oferta (Ofertas API)
OFERTA_API_BASE_URL=https://ofertafup.sistema.pro.br/api/oferta
OFERTA_API_TIMEOUT=10
